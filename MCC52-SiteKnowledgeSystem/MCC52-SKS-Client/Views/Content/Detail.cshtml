@using MCC52_SiteKnowledgeSystem.Model;
@using MCC52_SKS_Client.ViewModel;


@model MCC52_SKS_Client.ViewModel.GetContentVM;
@{
    ViewData["Title"] = Model.ContentTitle;
}

<body class="hold-transition sidebar-mini layout-fixed">

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- /.col -->
                    <div class="col">
                        <div class="card">
                            <div class="card-header p-2">
                                <h2>@Model.ContentTitle</h2>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    
                                        <!-- Post -->
                                        <div class="post">
                                            <div class="user-block">
                                                <img class="img-circle img-bordered-sm" src="../../dist/img/user1-128x128.jpg" alt="user image">
                                                <span class="username">
                                                    <a href="#">@Model.FullName</a>
                                                </span>
                                                <span class="description">@Model.ContentDate</span>
                                            </div>
                                            <!-- /.user-block -->
                                            <p>
                                                @Model.ContentText
                                            </p>

                                            <input class="form-control form-control-sm" type="text" placeholder="Type a comment">

                                            <!-- /.post -->

                                        </div>
                                    
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>

</body>


@section Scripts{
    <script type="text/javascript" src="~/js/content.js"></script>
}
